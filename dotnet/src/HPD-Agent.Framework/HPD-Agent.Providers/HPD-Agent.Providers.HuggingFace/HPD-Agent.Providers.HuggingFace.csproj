<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <!-- Inherits TargetFrameworks from Directory.Build.props: net10.0;net9.0;net8.0 -->
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <!-- Native AOT Configuration -->
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>

    <PackageId>HPD-Agent.Providers.HuggingFace</PackageId>
    <Title>HPD-Agent HuggingFace Provider</Title>
    <Description>HuggingFace Inference API provider for HPD-Agent</Description>
    <PackageTags>ai;agent;huggingface;inference;llm</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="HPD-Agent.Providers.Tests" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../HPD-Agent/HPD-Agent.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HuggingFace" Version="0.4.1-dev.23" />
  </ItemGroup>
</Project>
