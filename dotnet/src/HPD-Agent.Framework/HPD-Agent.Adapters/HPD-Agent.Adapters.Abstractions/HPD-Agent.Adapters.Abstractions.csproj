<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <RootNamespace>HPD.Agent.Adapters</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.Adapters.Abstractions</PackageId>
    <Description>Contracts, attributes, and source generator for building HPD platform adapters (Slack, Teams, Discord, etc.).</Description>
    <PackageTags>ai;agent;adapters;slack;teams;discord;webhooks</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../HPD-Agent.Hosting/HPD-Agent.Hosting.csproj" />
    <!-- Source generator is a build-time analyzer, not a runtime reference -->
    <ProjectReference
      Include="../HPD-Agent.Adapters.SourceGenerator/HPD-Agent.Adapters.SourceGenerator.csproj"
      OutputItemType="Analyzer"
      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <!-- Pack source generator as analyzer in NuGet package -->
  <Target Name="IncludeAdapterAnalyzers" BeforeTargets="_GetPackageFiles">
    <ItemGroup>
      <None Include="..\HPD-Agent.Adapters.SourceGenerator\bin\$(Configuration)\netstandard2.0\HPD-Agent.Adapters.SourceGenerator.dll"
            Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>
  </Target>

</Project>
