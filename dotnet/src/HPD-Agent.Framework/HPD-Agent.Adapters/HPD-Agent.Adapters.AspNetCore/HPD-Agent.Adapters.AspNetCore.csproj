<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <RootNamespace>HPD.Agent.Adapters.AspNetCore</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.Adapters.AspNetCore</PackageId>
    <Description>ASP.NET Core integration for HPD platform adapters. Provides webhook signature verification, endpoint mapping, and MapHPDAdapters() convenience extension.</Description>
    <PackageTags>ai;agent;adapters;aspnetcore;webhooks</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../HPD-Agent.Adapters.Abstractions/HPD-Agent.Adapters.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
