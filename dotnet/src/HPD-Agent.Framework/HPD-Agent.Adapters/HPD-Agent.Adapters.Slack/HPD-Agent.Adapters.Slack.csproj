<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <RootNamespace>HPD.Agent.Adapters.Slack</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.Adapters.Slack</PackageId>
    <Description>Slack adapter for HPD agents. Connects an HPD agent to Slack via Events API and Block Kit — webhook routing, streaming (PostAndEdit and native chatStream), slash commands, modals, permissions, and file uploads.</Description>
    <PackageTags>ai;agent;adapters;slack;webhooks;blockkit</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../HPD-Agent.Adapters.Abstractions/HPD-Agent.Adapters.Abstractions.csproj" />
    <ProjectReference Include="../HPD-Agent.Adapters.AspNetCore/HPD-Agent.Adapters.AspNetCore.csproj" />
    <!-- Source generator: emits HandleWebhookAsync dispatch, registration extensions, JSON context -->
    <ProjectReference Include="../HPD-Agent.Adapters.SourceGenerator/HPD-Agent.Adapters.SourceGenerator.csproj"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <!-- HttpContext, IResult, IHttpClientFactory — required by SlackAdapter and SlackApiClient -->
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
