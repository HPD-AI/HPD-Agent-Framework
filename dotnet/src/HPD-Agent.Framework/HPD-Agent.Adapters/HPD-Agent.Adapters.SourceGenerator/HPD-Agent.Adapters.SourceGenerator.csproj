<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>HPD-Agent.Adapters.SourceGenerator</PackageId>
    <!-- Source generators must target netstandard2.0 for Roslyn compatibility -->
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- Clear multi-targeting from Directory.Build.props -->
    <TargetFrameworks></TargetFrameworks>
    <RootNamespace>HPD.Agent.Adapters.SourceGenerator</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <IsRoslynComponent>true</IsRoslynComponent>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <NoWarn>CS8600;CS8601;CS8602;CS8604;RS2008;CS1591</NoWarn>
    <!-- Not packaged standalone â€” included as analyzer in HPD-Agent.Adapters.Abstractions -->
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.11.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
