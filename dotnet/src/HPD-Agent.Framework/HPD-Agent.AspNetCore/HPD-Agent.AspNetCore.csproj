<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <RootNamespace>HPD.Agent.AspNetCore</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.AspNetCore</PackageId>
    <Description>ASP.NET Core hosting layer for HPD-Agent Framework. Provides minimal-code web API setup with SSE/WebSocket streaming.</Description>
    <PackageTags>ai;agent;aspnetcore;web-api;streaming</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../HPD-Agent.Hosting/HPD-Agent.Hosting.csproj" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
