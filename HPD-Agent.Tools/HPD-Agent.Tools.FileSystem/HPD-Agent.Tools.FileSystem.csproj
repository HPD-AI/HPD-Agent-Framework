<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>HPD.Agent.Tools.FileSystem</RootNamespace>

    <!-- Package Metadata (inherits Version, Authors, License from Directory.Build.props) -->
    <PackageId>HPD-Agent.Tools.FileSystem</PackageId>
    <Description>File system tools for HPD-Agent. Provides AI functions for reading, writing, editing, searching, and discovering files.</Description>
    <PackageTags>ai;agent;filesystem;tools;hpd-agent</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core dependencies (match HPD-Agent versions) -->
    <PackageReference Include="CliWrap" Version="3.9.0" />
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.1.1" />
    <PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="10.1.1" />

    <!-- File operations -->
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="10.0.0" />
    <PackageReference Include="DiffPlex" Version="1.7.2" />
    <PackageReference Include="MAB.DotIgnore" Version="3.0.2" />
    <PackageReference Include="Ude.NetStandard" Version="1.2.0" />

    <!-- JSON Schema (match HPD-Agent) -->
    <PackageReference Include="JsonSchema.Net.Generation" Version="5.1.1" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to core HPD-Agent project -->
    <ProjectReference Include="..\..\HPD-Agent\HPD-Agent.csproj" />
    <ProjectReference Include="..\..\HPD-Agent.SourceGenerator\HPD-Agent.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
