<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Inherits TargetFrameworks from Directory.Build.props: net10.0;net9.0;net8.0 -->
    <RootNamespace>HPD.Agent.Audio.ElevenLabs</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <NoWarn>HPDAUDIO001;MEAI001;IL2026;IL3050</NoWarn>
    <!-- Native AOT Configuration -->
    <PublishAot>true</PublishAot>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.AudioProviders.ElevenLabs</PackageId>
    <Description>ElevenLabs audio provider for HPD-Agent. Implements ITextToSpeechClient and ISpeechToTextClient using ElevenLabs API (WebSocket streaming for TTS, HTTP for STT).</Description>
    <PackageTags>ai;agent;audio;tts;stt;elevenlabs;speech;streaming</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Audio abstractions -->
    <ProjectReference Include="..\HPD-Agent.Audio\HPD-Agent.Audio.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ElevenLabs" Version="0.9.0" />
    <PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="10.3.0" />
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.3.0" />
  </ItemGroup>

  <!-- Expose internals to test project -->
  <ItemGroup>
    <InternalsVisibleTo Include="HPD-Agent.Tests" />
  </ItemGroup>

</Project>
