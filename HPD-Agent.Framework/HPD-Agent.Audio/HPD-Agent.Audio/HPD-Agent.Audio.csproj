<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Inherits TargetFrameworks from Directory.Build.props: net10.0;net9.0;net8.0 -->
    <RootNamespace>HPD.Agent.Audio</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <NoWarn>HPDAUDIO001;MEAI001;IL2026;IL3050</NoWarn>
    <!-- Native AOT Configuration -->
    <PublishAot>true</PublishAot>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <!-- NuGet Package Metadata -->
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.Audio</PackageId>
    <Description>Audio pipeline abstractions and middleware for HPD-Agent. Includes TTS/STT abstractions, VAD, turn detection, and audio events.</Description>
    <PackageTags>ai;agent;audio;tts;stt;voice;speech;middleware</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core HPD-Agent dependency -->
    <ProjectReference Include="..\..\HPD-Agent\HPD-Agent.csproj" />
        <PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="10.3.0" />
  </ItemGroup>

  <!-- Expose internals to test projects -->
  <ItemGroup>
    <InternalsVisibleTo Include="HPD-Agent.Tests" />
    <InternalsVisibleTo Include="HPD-Agent.Audio.Tests" />
  </ItemGroup>

</Project>
