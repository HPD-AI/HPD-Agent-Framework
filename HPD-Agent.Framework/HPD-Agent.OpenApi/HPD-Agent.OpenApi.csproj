<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>HPD-Agent.OpenApi</PackageId>
    <!-- Inherits TargetFrameworks from Directory.Build.props: net10.0;net9.0;net8.0 -->
    <RootNamespace>HPD.Agent.OpenApi</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <NoWarn>MEAI001</NoWarn>
    <!-- Native AOT Configuration -->
    <PublishAot>true</PublishAot>
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>
    <OutputType>Library</OutputType>
    <Description>HPD-Agent integration shim for OpenAPI support. Adds [OpenApi] toolkit attribute support, WithOpenApi() builder extensions, retry error handling, and response optimization middleware.</Description>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="HPD-Agent" />
    <InternalsVisibleTo Include="HPD-Agent.OpenApi.Tests" />
  </ItemGroup>

  <ItemGroup>
    <!-- Core AI Framework -->
    <PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="10.3.0" />
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.3.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../HPD.OpenApi.Core/HPD.OpenApi.Core.csproj" />
    <ProjectReference Include="../HPD-Agent/HPD-Agent.csproj" />
  </ItemGroup>

</Project>
