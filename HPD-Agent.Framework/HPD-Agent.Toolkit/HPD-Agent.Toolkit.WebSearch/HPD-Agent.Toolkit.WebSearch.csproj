<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <!-- Inherits TargetFrameworks from Directory.Build.props: net10.0;net9.0;net8.0 -->
    <RootNamespace>HPD.Agent.Toolkit.WebSearch</RootNamespace>

    <!-- Native AOT Configuration -->
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>

    <!-- Package Metadata (inherits Version, Authors, License from Directory.Build.props) -->
    <PackageId>HPD-Agent.Toolkit.WebSearch</PackageId>
    <Description>Web search toolkit for HPD-Agent. Provides AI functions for searching the web using Tavily, Brave, and Bing search APIs.</Description>
    <PackageTags>ai;agent;websearch;search;toolkit;hpd-agent;tavily;brave;bing</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core dependencies -->
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.3.0" />
    <PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="10.3.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.1" />

    <!-- JSON Schema -->
    <PackageReference Include="JsonSchema.Net.Generation" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to core HPD-Agent project -->
    <ProjectReference Include="..\..\HPD-Agent\HPD-Agent.csproj" />
    <ProjectReference Include="..\..\HPD-Agent.SourceGenerator\HPD-Agent.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
